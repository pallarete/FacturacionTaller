@model IEnumerable<FacturaTallerMVC.Models.Factura>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recambio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Piezas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPiezas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trabajos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorasTaller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHoras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pvp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                @Html.DisplayFor(modelItem => item.Cliente.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coche.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recambio.IdRecambio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Piezas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPiezas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trabajos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasTaller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHoras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pvp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFactura">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFactura">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFactura">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
